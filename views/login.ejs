<div class="container-block mt-5 mx-auto" style="max-width: 400px">
  <div class="mx-auto">
    <form action="/auth/login" method="POST">
      <% if (tag === "candidato") { %>
      <legend>Login Candidato</legend>
      <% } else if (tag === "representante") { %>
      <legend>Login Representante</legend>
      <% } %>
      <span></span>
      <% var errors = errors || null %> <% if (errors) { %>
      <div class="invalid-feedback" id="errorsDiv">
        <%= errors.credenciais %>
      </div>
      <script>
        document.getElementById("errorsDiv").style.display = "inherit";
      </script>
      <% } %>
      <div class="row">
        <div class="col-12 mb-3">
          <label for="inputEmail" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="inputEmail"
            name="email"
          />
        </div>

        <div class="col-12 mb-3">
          <label for="inputSenha" class="form-label">Senha</label>
          <input
            type="password"
            class="form-control"
            id="inputSenha"
            name="senha"
          />
        </div>
      </div>

      <input class="visually-hidden" type="text" name="tag" id="tag" value=<%= tag %>>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
  </div>
</div>

<% var errors = errors || null %> <% if (errors) { %>
<script>
  document.getElementById("inputEmail").style.borderColor = "red";
  document.getElementById("inputSenha").style.borderColor = "red";
</script>
<% } %>
