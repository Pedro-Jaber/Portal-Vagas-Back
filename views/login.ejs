<div class="container-block mt-5 mx-auto" style="max-width: 400px">
  <div class="mx-auto">
    <form action="/auth/login" method="POST">
      <legend>Formulario Representante</legend>
      <div class="" id="errorsDiv">
        <% var errors = errors || null %> <% if (errors) { %>
        <script></script>
        <%= errors.credenciais %> <% } %>
      </div>
      <div class="row">
        <div class="col-12 mb-3">
          <label for="inputEmail" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="inputEmail"
            name="email"
          />
        </div>

        <div class="col-12 mb-3">
          <label for="inputSenha" class="form-label">Senha</label>
          <input
            type="password"
            class="form-control"
            id="inputSenha"
            name="senha"
          />
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
  </div>
</div>
