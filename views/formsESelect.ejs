<div class="container-block mt-5">
  <div class="mx-auto">
    <form action="/db/recebeForms" method="POST">
      <% if (tag == "representante") { %>

      <legend>Formulario Representante</legend>

      <div class="row">
        <div class="col-12 mb-3">
          <label for="inputNome" class="form-label">Nome</label>
          <input type="text" class="form-control" id="inputNome" name="nome" />
        </div>

        <div class="col-6 mb-3">
          <label for="inputEmail" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="inputEmail"
            name="email"
          />
        </div>

        <div class="col-6 mb-3">
          <label for="inputCPF" class="form-label">CPF</label>
          <input type="text" class="form-control" id="inputCPF" name="cpf" />
        </div>
      </div>

      <% } else if (tag == "vaga") { %>

      <legend>Formulario Vaga</legend>
      <!-- empresa, cargaHoraria, bolsa, descricao -->

      <div class="row">
        <div class="col-6 mb-3">
          <!-- TODO Trocar para código da empresa -->
          <label for="inputEmpresa" class="form-label">Empresa</label>
          <input
            type="text"
            class="form-control"
            id="inputEmpresa"
            name="empresa"
          />
        </div>

        <div class="col-6 mb-3">
          <label for="inputCargaHoraria" class="form-label"
            >Carga Horaria Diaria</label
          >
          <input
            type="number"
            class="form-control"
            id="inputCargaHoraria"
            name="cargaHoraria"
          />
        </div>

        <div class="col-6 mb-3">
          <label for="inputBolsa" class="form-label">Valor da Bolsa</label>
          <input
            type="text"
            class="form-control"
            id="inputBolsa"
            name="bolsa"
          />
        </div>

        <div class="col-12 mb-3">
          <label for="inputDercricao" class="form-label">Descrição</label>
          <textarea
            class="form-control"
            name="descricao"
            id="inputDercricao"
            cols="30"
            rows="10"
          ></textarea>
        </div>
      </div>

      <% } else if (tag == "candidato") { %>
      <legend>Formulario Candidato</legend>
      <!-- nome, email, senha, data de nascimento, CPF -->

      <div class="row">
        <div class="col-12 mb-3">
          <label for="inputNome" class="form-label">Nome</label>
          <input type="text" class="form-control" id="inputNome" name="nome" />
        </div>

        <div class="col-6 mb-3">
          <label for="inputEmail" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="inputEmail"
            name="email"
          />
        </div>

        <div class="col-6 mb-3">
          <label for="inputSenha" class="form-label">Senha</label>
          <input
            type="password"
            class="form-control"
            id="inputSenha"
            name="senha"
          />
        </div>

        <div class="col-6 mb-3">
          <label for="inputNascimento" class="form-label"
            >Data de Nascimento</label
          >
          <input
            type="date"
            class="form-control"
            id="inputNascimento"
            name="nascimento"
          />
        </div>

        <div class="col-6 mb-3">
          <label for="inputCPF" class="form-label">CPF</label>
          <input type="text" class="form-control" id="inputCPF" name="cpf" />
        </div>
      </div>

      <% } %>

      <div style="display: none">
        <input type="text" id="tag" name="tag" value="<%= tag %>" />
      </div>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
  </div>
</div>

<div class="overflow-auto container-block mt-5" style="max-height: 500px">
  <ul class="list-group">
    <% if (tag == "representante") { %> <% data.forEach(representante => { %>

    <li class="list-group-item py-4">
      <div class="d-flex mb-2">
        <p class="text-capitalize fs-3 fw-bold m-0">
          <%= representante.nome %>
        </p>
        <span class="d-flex font-monospace align-items-center me-0 ms-auto"
          ><%= representante.id %>
        </span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">CPF:</p>
        <span class="ms-1"><%= representante.cpf || "NULL" %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Email:</p>
        <span class="ms-1"><%= representante.email %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Senha:</p>
        <span class="ms-1"><%= representante.senha %></span>
      </div>

      <div class="d-flex mt-3">
        <p class="fw-bold m-0">Criado em:</p>
        <span class="ms-1"><%= representante.createdAt.toString() %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Ultima atualização:</p>
        <span class="ms-1"><%= representante.updatedAt.toString() %></span>
      </div>
    </li>

    <% }) %> <% } else if (tag == "vaga") { %> <% data.forEach(vaga => { %>

    <li class="list-group-item py-4">
      <div class="d-flex mb-2">
        <p class="text-capitalize fs-3 fw-bold m-0"><%= vaga.codigo %></p>
        <span class="d-flex font-monospace align-items-center me-0 ms-auto"
          ><%= vaga.id %>
        </span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Empresa:</p>
        <span class="ms-1"><%= vaga.empresa %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Carga Horaria:</p>
        <span class="ms-1"><%= vaga.cargaHoraria %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Bolsa:</p>
        <span class="ms-1"><%= vaga.bolsa %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Descrição:</p>
        <span class="ms-1"><%= vaga.descricao %></span>
      </div>

      <div class="d-flex mt-3">
        <p class="fw-bold m-0">Criado em:</p>
        <span class="ms-1"><%= vaga.createdAt.toString() %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Ultima atualização:</p>
        <span class="ms-1"><%= vaga.updatedAt.toString() %></span>
      </div>
    </li>

    <% }) %> <% } else if (tag == "candidato") { %> <% data.forEach(candidato =>
    { %> <% let nascimento = new Date(candidato.nascimento); nascimentoString
    =`${nascimento.getDate()}/${nascimento.getMonth()}/${nascimento.getFullYear()}`;
    let idade = Math.floor((new Date() - new Date(nascimento).getTime()) /
    3.15576e+10); %>

    <li class="list-group-item py-4">
      <div class="d-flex mb-2">
        <p class="text-capitalize fs-3 fw-bold m-0"><%= candidato.nome %></p>
        <span class="d-flex font-monospace align-items-center me-0 ms-auto"
          ><%= candidato.id %>
        </span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">CPF:</p>
        <span class="ms-1"><%= candidato.cpf %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Email:</p>
        <span class="ms-1"><%= candidato.email %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Senha:</p>
        <span class="ms-1"><%= candidato.senha %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Idade:</p>
        <span class="ms-1"><%= idade %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Nascimento:</p>
        <span class="ms-1"><%= nascimentoString %></span>
      </div>

      <div class="d-flex mt-3">
        <p class="fw-bold m-0">Criado em:</p>
        <span class="ms-1"><%= candidato.createdAt.toString() %></span>
      </div>

      <div class="d-flex">
        <p class="fw-bold m-0">Ultima atualização:</p>
        <span class="ms-1"><%= candidato.updatedAt.toString() %></span>
      </div>
    </li>

    <% }) %> <% } %>
  </ul>
</div>
